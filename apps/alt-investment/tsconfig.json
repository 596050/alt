{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"],
			"@packages/components": ["../../packages/components/src/index"],
			"@twilight-packages/utils": ["../../packages/twilight-utils/src/index"],
			"@packages/utils": ["../../packages/utils/src/index"],
			"@packages/util-shared-types": [
				"../../packages/util-shared-types/src/index"
			],
			"~/components": ["../../packages/components/src"],
			"~/components/*": ["../../packages/components/src/*"],
			"~/util": ["../../packages/utils/src"],
			"~/util/*": ["../../packages/utils/src/*"],
			"@ducanh2912/next-pwa": ["../../packages/next-pwa/src/index"]
		},
		"typeRoots": ["node_modules/@types", "./src/typings"]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"dictionaries.ts"
	],
	"exclude": ["node_modules"]
}
